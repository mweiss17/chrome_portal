{
  "manifest_version": 2,

  "name": "Chrome Portal",
  "description": "This extension shows the top 3 things you want to do today, your recent financial transactions, and how you're doing on your budget.",
  "version": "1.0",
  "chrome_url_overrides": { "newtab": "popup.html" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/*",
    "http://127.0.0.1/"
  ]
}
